<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_catImage_ICL"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tv_sourceUrl_ICL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/universal_padding_size_10"
            android:inputType="textUri" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/universal_padding_size_10">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_divider_height_size"
                android:layout_marginBottom="@dimen/view_divider_bottom_margin"
                android:background="@android:color/darker_gray" />

            <RatingBar
                android:id="@+id/rb_catVote_ICL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/rating_bar_padding"
                android:numStars="10"
                android:progressDrawable="@drawable/layer_list_rating_bar"
                style="?android:attr/ratingBarStyleSmall" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

